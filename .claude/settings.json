{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "permissions": {
    "allow": [
      "mcp__nvim-lsp__read-lints",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(find *)",
      "Bash(tree *)",
      "Bash(sed *)",
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(wc *)",
      "Bash(gh issue view:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": ["Read(./.env)"],
    "ask": [
      "Bash(curl *)",
      "Bash(rm *)",
      "Bash(sed -i*)",
      "Bash(sed * -i *)",
      "Bash(sed * -i'*)",
      "Bash(sed --in-place*)",
      "Bash(sed * --in-place *)"
    ]
  },
  "sandbox": {
    "enabled": false
  },
  "fastMode": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/claude-mux-state.sh busy"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/claude-mux-state.sh needs_attention"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/claude-mux-state.sh idle"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/claude-mux-state.sh cleanup"
          }
        ]
      }
    ]
  }
}
