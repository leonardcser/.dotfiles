#!/usr/bin/env bash

# Configuration constants
SEARCH_DIRS=("$HOME/dev" "$HOME/.dotfiles" "$HOME/Library/Mobile Documents/com~apple~CloudDocs/Documents/vault")
IGNORE_DIRS=(
    # Dependencies
    "node_modules" "vendor" ".bundle"
    # Version control
    ".git"
    # Python
    ".venv" "venv" "env" "__pycache__" ".pytest_cache" ".mypy_cache" ".ruff_cache"
    # Build outputs
    "build" "dist" "target" "out" "coverage"
    # Framework-specific
    ".svelte-kit" ".next" ".turbo" ".nuxt"
    # Language-specific caches
    ".zig-cache" ".cargo" ".gradle"
    # Expo/React Native
    ".expo" ".expo-shared"
    # IDE/Editor
    ".vscode" ".cursor" ".idea"
    # Misc
    ".oh-my-zsh" ".cache" ".wrangler" ".github" "tmp"
)
MIN_DEPTH=0
MAX_DEPTH=6

if [[ $# -eq 1 ]]; then
    if [[ "$1" == "." ]]; then
        # Special case: use current working directory folder name
        selected_name=$(basename "$PWD" | tr . _)
        selected="$PWD"
    else
        selected=$1
        selected_name=$(basename "$selected" | tr . _)
        if [[ ! -d "$selected" ]] && ! tmux has-session -t="$selected_name" 3>/dev/null; then
            echo "Error: Could not find '$selected'."
            exit 1
        fi
    fi
else
    # Build ignore pattern from IGNORE_DIRS array
    ignore_pattern=""
    for dir in "${IGNORE_DIRS[@]}"; do
        if [[ -z "$ignore_pattern" ]]; then
            ignore_pattern="-name $dir"
        else
            ignore_pattern="$ignore_pattern -o -name $dir"
        fi
    done
    
    selected=$(find "${SEARCH_DIRS[@]}" -mindepth $MIN_DEPTH -maxdepth $MAX_DEPTH -type d \( $ignore_pattern \) -prune -o -type d -print | while read -r path; do echo "~/${path#$HOME/}"; done | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

# Convert relative path back to absolute path if needed
if [[ "$selected" =~ ^~ ]]; then
    selected="${selected/#\~/$HOME}"
elif [[ "$selected" != /* ]]; then
    # Resolve relative paths from current directory
    selected="$PWD/$selected"
fi

selected_name=$(basename "$selected" | tr . _)

# Check if the session already exists
if ! tmux has-session -t="$selected_name" 2> /dev/null; then
    tmux new-session -s "$selected_name" -c "$selected" -d            # Create new session (detached)
    tmux new-window -t "$selected_name" -c "$selected"                # Create a second window
    tmux select-window -t "$selected_name:1"                        # Go back to the first window
    tmux send-keys -t "$selected_name:1" "nvim ." C-m               # Run nvim in the first window
fi

if [[ -n $TMUX ]]; then
    # Inside tmux: switch to the session
    tmux switch-client -t "$selected_name"
else
    # Outside tmux: attach to the session
    tmux attach-session -t "$selected_name"
fi
